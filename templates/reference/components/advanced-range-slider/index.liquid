{% layout "reference/layout" %}
{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE INTRO - BEGINS -->
	<section class="row">

	<!-- PAGE TITLE AND DESCRIPTION - BEGINS -->
		<div class="small-12 columns">
			<h1>{{ model.title }}</h1>
			
			<section class="row">
				<div class="small-3 columns">
					<p>Version: {{ model.version_number }}</p>		
				</div>
				<div class="small-9 columns">
					<p class="right"><span class="label radius evo-label" data-evo-background-color="sapphire-bright">Employee Portal</span> <span class="label radius evo-label" data-evo-background-color="amethyst-bright">Communication Site</span></p>		
				</div>
			</section>

			<p>
				The Advanced Range Slider component uses at it's base the Evolution Core UI <a href="/reference/objects/slider">Range Slider</a> and adds on the options for tick markers and a tick marker key.
			</p>
		</div>
	<!-- PAGE TITLE AND DESCRIPTION - ENDS -->

	</section>
<!-- PAGE INTRO - ENDS -->

<!-- EXAMPLE - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			<hr />

		<!-- ADVANCED RANGE SLIDER EXAMPLE - BEGINS -->

			<!-- EXAMPLE DEMO - BEGINS -->
				<section class="row">

				<!-- EXAMPLE CODE - BEGINS -->
					<div class="medium-6 columns">

					<!-- EXAMPLE HTML - BEGINS -->
						<h6>HTML</h6>
						{{ global.reference-get-code-start-tag }}{% include "/reference/components/advanced-range-slider/advanced-range-slider" %}{{ global.reference-get-code-end-tag }}
					<!-- EXAMPLE HTML - ENDS -->

					<!-- EXAMPLE JS - BEGINS -->
						<h6>Javascript</h6>
						{{ global.reference-get-code-start-tag }}{% include "/reference/components/advanced-range-slider/advanced-range-slider-js" %}{{ global.reference-get-code-end-tag }}
					<!-- EXAMPLE JS - ENDS -->

					</div>
				<!-- EXAMPLE CODE - ENDS -->

				<!-- EXAMPLE RENDERED CODE - BEGINS -->
					<div class="medium-6 columns">
						<h6>Rendered HTML</h6>
						{{ "/reference/components/advanced-range-slider/advanced-range-slider.css" | asset_url | stylesheet_tag }}
						{% include "/reference/components/advanced-range-slider/advanced-range-slider" %}
					</div>
				<!-- EXAMPLE RENDERED CODE - ENDS -->

				</section>
			<!-- EXAMPLE DEMO - ENDS -->

			<hr />
		<!-- ADVANCED RANGE SLIDER EXAMPLE - ENDS -->

		<!-- ADVANCED - BEGINS -->
			<section class="row">
				<div class="small-12 columns">

					<h3 data-magellan-destination="advanced">Advanced</h3>
					<a name="advanced"></a>

				<!-- DEPENDENCY LIST - BEGINS -->
					{% if model.reference-dependency == "true" %}
						<h6>Dependencies</h6>
						<ul>
							{% if model.reference-dependency-evolution == "true" %}
								<li>
									<a href="/">Evolution Core {{ global.version_number }}</a>
								</li>
							{% endif %}

							{% if model.reference-dependency-foundation == "true" %}
								<li>
									<a href="http://foundation.zurb.com/" target="_blank">Zurb Foundation {{ global.foundation_version }}</a>
								</li>
							{% endif %}

							{% if model.reference-dependency-jquery == "true" %}
								<li><a href="https://jquery.com/" target="_blank">jQuery {{ global.jquery_version }}</a></li>
							{% endif %}

							{% if model.reference-dependency-jquery-ui == "true" %}
								<li>
									<a href="http://jqueryui.com/" target="_blank">jQuery UI {{ global.jquery_ui_version }}</a>
									<ul>
										<li>
											<a href="https://jqueryui.com/slider/" target="_blank">Slider</a>
										</li>
									</ul>
								</li>
							{% endif %}

							{{ model.reference-dependency-list }}
						</ul>
					{% endif %}
				<!-- DEPENDENCY LIST - ENDS -->

				</div>
			</section>
		<!-- ADVANCED - ENDS -->

		</div>
	</section>
<!-- EXAMPLE - ENDS -->

{% endblock %}