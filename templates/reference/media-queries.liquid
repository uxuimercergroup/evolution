{% layout "reference/layout" %}
{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE CONTENT - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

		<!-- PAGE TITLE AND DESCRIPTION - BEGINS -->
			<h1>{{ model.title }}</h1>
			<p>Evolution Core uses Foundation's media query Sass variables and setup. Please refer to Foundation's <a href="http://foundation.zurb.com/docs/media-queries.html" target="_blank">media query documentation</a> for more information.</p>
		<!-- PAGE TITLE AND DESCRIPTION - ENDS -->

			<hr />

		<!-- CONTENT - BEGINS -->
			
			<!-- MEDIA QUERIES TABLE - BEGINS -->
				<div class="evo-table-small-mediaquery">
					<table class="evo-table" id="" border="0" cellpadding="0" cellspacing="0" title="" summary="" role="grid">
						<thead>
							<tr>
								<th scope="column">Media Query</th>
								<th scope="column">Devices</th>
								<th scope="column">Range (Device/Browser Width)</th>
							</tr>
						</thead>
						<tbody>
							{% for item in model.media-queries-table-data %}
							<tr>
								<td><strong>{{ item.media-query }}</strong></td>
								<td>{{ item.media-query-devices }}</td>
								<td>{{ item.media-query-range }}</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			<!-- MEDIA QUERIES TABLE - ENDS -->

		<!-- CONTENT - ENDS -->

		</div>
	</section>
<!-- PAGE CONTENT - ENDS -->

{% endblock %}