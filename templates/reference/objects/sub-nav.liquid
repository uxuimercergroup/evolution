{% layout "reference/layout" %}
{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE INTRO - BEGINS -->
	<section class="row">

	<!-- PAGE TITLE AND DESCRIPTION - BEGINS -->
		<div class="small-12 columns">
			<h1>{{ model.title }}</h1>			
			<p>
				This simple sub nav is great for moving between different states of a page. We use these frequently to show iterations of something, typically by date, but they're also handy for filters like these.
			</p>
		</div>
	<!-- PAGE TITLE AND DESCRIPTION - ENDS -->

	<!-- PAGE MAGELLAN NAV - BEGINS -->
		<div class="small-12 columns">
			<div class="evo-magellan" data-magellan-expedition="fixed">
				<dl class="sub-nav">
					<dd data-magellan-arrival="basic"><a href="#basic">Basic</a></dd>
					<dd data-magellan-arrival="visibility"><a href="#visibility">Item Visibility</a></dd>
					<dd data-magellan-arrival="advanced"><a href="#advanced">Advanced</a></dd>
					<dd class="site-html-ctn-toggle">
						<a href="javascript:;" class="site-get-code">Get Code<i class="evo-icon-arrow-right5 evo-icon-position-left"></i></a>
					</dd>
				</dl>
			</div>
		</div>
	<!-- PAGE MAGELLAN NAV - ENDS -->

	</section>
<!-- PAGE INTRO - ENDS -->

<!-- EXAMPLE - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			<hr />

	<!-- BASIC SUB NAV- BEGINS -->
		<h3 data-magellan-destination="basic">Basic</h3>
		<a name="basic"></a>
		<p>Add a <code>.sub-nav</code> class to a dl element and fill it full of definitions. You can use the definition title as a label at the beginning (useful for building filters on a page). Add a title to the beginning of your list with the dt element. Add an <code>.active</code> class to a dd element to give it the active style.</p>		
		
		<section class="row">

		<!-- EXAMPLE RENDERED CODE - BEGINS -->
			<div class="medium-6 columns">
				<h6>Rendered HTML</h6>
				{% include '/reference/objects/sub-nav/sub-nav' %}
			</div>
		<!-- EXAMPLE RENDERED CODE - ENDS -->

		<!-- EXAMPLE CODE - BEGINS -->
			<div class="medium-6 columns site-html-ctn">
				<h6>HTML</h6>
				{{ global.reference-get-code-start-tag }}{% include '/reference/objects/sub-nav/sub-nav' %}{{ global.reference-get-code-end-tag }}
			</div>
		<!-- EXAMPLE CODE - ENDS -->

		</section>
		<hr />
	<!-- BASIC SUB NAV- ENDS -->

	<!-- SUB NAV ITEM VISIBILITY - BEGINS -->
		<h3 data-magellan-destination="visibility">Item Visibility</h3>
		<a name="visibility"></a>
		<p>Add <a href="/reference/base/helpers#visibility-cheatsheet">Visibility Classes</a> to a dl element to hide or show an item for particular screen sizes.</p>

			<section class="row">

			<!-- EXAMPLE RENDERED CODE - BEGINS -->
				<div class="medium-6 columns">
					<h6>Rendered HTML</h6>
					{% include '/reference/objects/sub-nav/sub-nav-item-visibility' %}
				</div>
			<!-- EXAMPLE RENDERED CODE - ENDS -->

			<!-- EXAMPLE CODE - BEGINS -->
				<div class="medium-6 columns site-html-ctn">
					<h6>HTML</h6>
					{{ global.reference-get-code-start-tag }}{% include '/reference/objects/sub-nav/sub-nav-item-visibility' %}{{ global.reference-get-code-end-tag }}
				</div>
			<!-- EXAMPLE CODE - ENDS -->

			</section>
			<hr />
	<!-- SUB NAV ITEM VISIBILITY- ENDS -->

	<!-- ADVANCED - BEGINS -->
			<section class="row">
				<div class="small-12 columns">

					<h3 data-magellan-destination="advanced">Advanced</h3>
					<a name="advanced"></a>

				<!-- DEPENDENCY LIST - BEGINS -->
					{% if model.reference-dependency == "true" %}
						<h6>Dependencies</h6>
						<ul>
							{% if model.reference-dependency-foundation == "true" %}
								<li>
									<a href="http://foundation.zurb.com/" target="_blank">Zurb Foundation {{ global.foundation_version }}</a>
									<ul>
										<li>
											<a href="http://foundation.zurb.com/docs/components/subnav.html" target="_blank">Sub Nav</a>
										</li>
									</ul>
								</li>
							{% endif %}

							{% if model.reference-dependency-jquery == "true" %}
								<li><a href="https://jquery.com/" target="_blank">jQuery {{ global.jquery_version }}</a></li>
							{% endif %}

							{% if model.reference-dependency-jquery-ui == "true" %}
								<li><a href="http://jqueryui.com/" target="_blank">jQuery UI {{ global.jquery_ui_version }}</a></li>
							{% endif %}

							{{ model.reference-dependency-list }}
						</ul>
					{% endif %}
				<!-- DEPENDENCY LIST - ENDS -->

				</div>
			</section>
	<!-- ADVANCED - ENDS -->

		</div>
	</section>
<!-- EXAMPLE - ENDS -->

{% endblock %}