{% layout "reference/layout" %}
{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE INTRO - BEGINS -->
	<section class="row">

	<!-- PAGE TITLE AND DESCRIPTION - BEGINS -->
		<div class="small-12 columns">
			<h1>{{ model.title }}</h1>
		</div>
	<!-- PAGE TITLE AND DESCRIPTION - ENDS -->

	<!-- PAGE MAGELLAN NAV - BEGINS -->
		<div class="small-12 columns">
			<div class="evo-magellan" data-magellan-expedition="fixed">
				<dl class="sub-nav">
					<dd data-magellan-arrival="overall-color-palette"><a href="#overall-color-palette">Overall Color Palette</a></dd>
					<dd data-magellan-arrival="primary-color-palette"><a href="#primary-color-palette">Primary Color Palette</a></dd>
					<dd data-magellan-arrival="chart-colors"><a href="#chart-colors">Chart Colors</a></dd>
				</dl>
			</div>
		</div>
	<!-- PAGE MAGELLAN NAV - ENDS -->

	</section>
<!-- PAGE INTRO - ENDS -->

<!-- PAGE CONTENT - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			<hr />

			<h3 data-magellan-destination="overall-color-palette">Overall Color Palette</h3>
			<a name="overall-color-palette"></a>
			{% include '/content/visual/colors/overall-color-palette' %}

			<h3 class="evo-spacer-margin-top-x-large" data-magellan-destination="primary-color-palette">Primary Color Palette</h3>
			<a name="primary-color-palette"></a>
			{% include '/content/visual/colors/primary-color-palette' %}

			<h3 class="evo-spacer-margin-top-x-large" data-magellan-destination="chart-colors">Chart Colors</h3>
			<a name="chart-colors"></a>
			{% include "/content/visual/colors/chart-colors" %}

		</div>
	</section>
<!-- PAGE CONTENT - ENDS -->

{% endblock %}