{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- CONTENT SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

		<!-- PAGE TITLE - BEGINS -->
			<h1>{{ model.title }}</h1>
		<!-- PAGE TITLE - ENDS -->

			{% include '/reference/reference-content' %}

		<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - BEGINS -->
			{% if model.reference-get-code == "true" %}
				<div id="evo-ref-alternate-views-badge-content-panel-get-code">

					<h3 class="evo-hdr-rule">HTML</h3>

					{{ model.reference-code-html-content-block-pre }}


					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label }}</h4>
					{% endif %}
					{{ global.reference-get-code-start-tag }}{% include "/base/boxes/confirmation-message-box" %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-html-content-block-post }}


					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label-2 }}</h4>
					{% endif %}
					{{ global.reference-get-code-start-tag }}{% include "/base/boxes/attention-message-box" %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-html-content-block-post }}


					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label-3 }}</h4>
					{% endif %}
					{{ global.reference-get-code-start-tag }}{% include "/base/boxes/error-message-box" %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-html-content-block-post }}


					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label-4 }}</h4>
					{% endif %}
					{{ global.reference-get-code-start-tag }}{% include "/base/boxes/information-message-box" %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-html-content-block-post }}


					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label-5 }}</h4>
					{% endif %}
					{{ global.reference-get-code-start-tag }}{% include "/base/boxes/general-message-box" %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-html-content-block-post }}

					{% if model.reference-code-js == "true" %}
						<h3 class="evo-hdr-rule">JS</h3>

						{% if model.reference-example-versions == "true" %}
							<h4>{{ model.reference-example-version-label }}</h4>
						{% endif %}
						{{ model.reference-code-js-content-block-pre }}
						{{ global.reference-get-code-start-tag }}{ include '/js/' }{{ global.reference-get-code-end-tag }}
						{{ model.reference-code-js-content-block-post }}
					{% endif %}

				</div>
			{% endif %}
		<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - ENDS -->

		</div>
	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- EXAMPLE SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

		<!-- EXAMPLE SECTION - HEADER - BEGINS -->
			<h3 class="evo-hdr-dbl-rule evo-ref-example-hdr">{{ global.reference-example-hdr }}</h3>
		<!-- EXAMPLE SECTION - HEADER - ENDS -->

		<!-- EXAMPLE SECTION - CONTENT - BEGINS -->
			<section class="evo-ref-example-content">

				<a href="javascript:;" class="evo-float-right" onclick="location.reload();" title="Refresh page">
					<i class="evo-icon-loop2 evo-icon-color-gray-dark"></i>
				</a>

			<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->

				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label }}</h4>
				{% endif %}
				{% include "/base/boxes/confirmation-message-box" %}

				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-2 }}</h4>
				{% endif %}
				{% include "/base/boxes/attention-message-box" %}

				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-3 }}</h4>
				{% endif %}
				{% include "/base/boxes/error-message-box" %}

				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-4 }}</h4>
				{% endif %}
				{% include "/base/boxes/information-message-box" %}

				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-5 }}</h4>
				{% endif %}
				{% include "/base/boxes/general-message-box" %}

			<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

			</section>
		<!-- EXAMPLE SECTION - CONTENT - ENDS -->

		</div>
	</section>
<!-- EXAMPLE SECTION - ENDS -->

{% endblock %}