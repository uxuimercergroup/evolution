{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}
<!-- INTRO SECTION - BEGINS -->
<section class="col-24">
	<h1>{{ model.title }}</h1>
	<p class="mul-intro-text">
		A Text Area is a form input field that gives the user the ability to enter a large amount of text.
	</p>
</section>
<!-- INTRO SECTION - ENDS -->

<section class="col-24">

	<h3 class="mul-hdr-dbl-rule">
		Example
		<a href="javascript:;" class="mul-icon-size-small mul-icon-mul-arrow-circle-down mul-icon-color-gray-darker mul-icon-position-right mul-float-right related-items-menu"></a>
	</h3>

	<!-- TEXTAREA - BEGINS -->
	<div class="col-24 example-min-height">

		<div class="col-12 first">

			<div class="mul-box mul-box-rnd mul-ref-example-box">
				<h4 class="mul-hdr-rule">Text Area</h4>
				<!-- BASIC TEXTAREA - EXAMPLE - BEGINS -->
				<form class="mul-form" id="" name="" method="" action="" title="">
					<fieldset>
						<ol>
							{% include '/base/forms/form-stacked-textarea' %}
						</ol>
					</fieldset>
				</form>
				<!-- BASIC TEXTAREA - EXAMPLE - ENDS -->
			</div>

		</div>
		<div class="col-12">

			<div class="mul-box mul-box-rnd mul-ref-example-box">
				<h4 class="mul-hdr-rule">Expanding Text Area</h4>

				<!-- EXPANDING TYPE TEXTAREA - EXAMPLE - BEGINS -->
				<form class="mul-form" id="" name="" method="" action="" title="">
					<fieldset>
						<ol>
							<li>
								<label for="">Label for Text Area Goes Here:</label>
								<textarea class="js-mul-textarea-expand" id="" name="" tabindex="" title=""></textarea>
							</li>
						</ol>
					</fieldset>
				</form>
				<!-- EXPANDING TYPE TEXTAREA - EXAMPLE - ENDS -->
			</div>

		</div>

	</div>
	<!-- TEXTAREA - ENDS -->

	<!-- DETAILS SECTION - BEGINS -->
	<a name="moreDetails"></a>
	<h4 class="mul-hdr-dbl-rule additional-detail-hdr">Additional Details</h4>

	<div class="col-24">
		<div class="js-mul-tabs-example mul-tabs">
			{% include "page-tabs" %}
			<div id="tabs-1">
				<p>
					Use the Text Area element when a user is required to enter a large amount of text on a form. For shorter content, use the
					<a href="/base/forms/input">Text Input</a>
					element.
				</p>
			</div>
			<div id="tabs-2">
				<ul>
					<li>
						Text Area should default to the Attention/Highlight border color when the user clicks inside the field.
					</li>
					<li>
						Text Area height size will be adaptable to the userâ€™s content needs. For example, the box will increase in height as the user enters more and more content.
					</li>
					<li>The Input Label should always be in Title Case.</li>
				</ul>
			</div>
			<div id="tabs-3">
				<p>
					To use the expanding textarea example you must include the Javascript snippet listed in the "Get Code" section and also place this
					<code>js-mul-textarea-expand</code>
					class name on the textarea.
				</p>

				<h5>Cross browser compatibility</h5>
				<p>
					IE9 doesn't support rounded corners on inputs, so we square the corners of the inputs so it looks just like IE8.
				</p>

				<h4 class="mul-hdr-rule">Dependencies</h4>
				<table class="mul-table mul-table-borders" id="" border="0" cellpadding="0" cellspacing="0" title="" summary="">
					<thead>
						<tr>
							<th width="" scope="col">Library</th>
							<th width="" scope="col">Location or Download</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>jQuery {{ global.jquery_version }}</td>
							<td>assets/scripts/core/lib/jquery</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div id="tabs-4">
				<p>Examples go here&hellip;</p>
			</div>
			<div id="tabs-5">
			<!-- GET CODE - BEGINS -->
				<section class="col-24">

					<h5 class="mul-hdr-rule">HTML</h5>
					<p>To use an expanding textarea place <code>js-mul-textarea-expand</code> class on the textarea.</p>
					
					<h5>Default Textarea</h5>
					<pre class="prettyprint linenums"><xmp>{% include '/base/forms/form-stacked-textarea' %}</xmp></pre>

				</section>
			<!-- GET CODE - ENDS -->
			</div>
		</div>
	</div>
	<!-- DETAILS SECTION - ENDS -->

</section>
{% endblock %}