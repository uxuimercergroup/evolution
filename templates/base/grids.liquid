<!-- Block grid - begins -->
<ul class="small-block-grid-3">
	<li>Content</li>
	<li>Content</li>
	<li>Content</li>
</ul>
<!-- Block grid - ends -->


<!-- EXAMPLE SECTION - BEGINS -->
	<section class="evo-ref-example">

		<ul class="inline-list evo-inline-list evo-inline-list-pipes evo-margin-bottom">
			<li><a href="#offsets">Offsets with Regular Grid</a></li>
			<li><a href="#center-grids">Centering Grids</a></li>
			<li><a href="#grid-layouts">Grid Layouts</a></li>
		</ul>

	<!-- Offsets - begins -->
		<span id="offsets"></span>
		<h3 class="evo-hdr-rule">Offset Grid Layouts</h3>
		<div class="row evo-row">
			<div class="large-1 columns">1</div>
			<div class="large-11 columns">11</div>
		</div>
		<div class="row evo-row">
			<div class="large-1 columns">1</div>
			<div class="large-10 large-offset-1 columns">10, offset 1</div>
		</div>
		<div class="row evo-row">
			<div class="large-1 columns">1</div>
			<div class="large-9 large-offset-2 columns">9, offset 2</div>
		</div>
		<div class="row evo-row">
			<div class="large-1 columns">1</div>
			<div class="large-8 large-offset-3 columns">8, offset 3</div>
		</div>
	<!-- Offsets - ends -->

	<!-- Centered Grids -begins -->
		<span id="center-grids"></span>
		<h3 class="evo-hdr-rule">Centered Grid Layouts</h3>
		<div class="row">
			<div class="small-3 small-centered columns">3 center</div>
		</div>
		<div class="row">
			<div class="small-6 large-centered columns">6 center</div>
		</div>
		<div class="row">
			<div class="small-9 small-centered large-uncentered columns">9 center</div>
		</div>
		<div class="row">
			<div class="small-11 small-centered columns">11 center</div>
		</div>
	<!-- Centered Grids -ends -->

	<!-- Grid Layouts - begins -->
		<span id="grid-layouts"></span>

		<h3 class="evo-hdr-rule">Grid Layouts</h3>

		<ul class="inline-list evo-inline-list evo-inline-list-pipes evo-margin-bottom">
			<li><a href="#grid-1-col">1 Col</a></li>
			<li><a href="#grid-2-col-50-50">2 Col (50/50)</a></li>
			<li><a href="#grid-2-col-66-33">2 Col (66/33)</a></li>
			<li><a href="#grid-2-col-33-66">2 Col (33/66)</a></li>
			<li><a href="#grid-2-col-75-25">2 Col (75/25)</a></li>
			<li><a href="#grid-2-col-25-75">2 Col (25/75)</a></li>
			<li><a href="#grid-3-col-33-33-33">3 Col (33/33/33)</a></li>
			<li><a href="#grid-3-col-25-50-25">3 Col (25/50/25)</a></li>
			<li><a href="#grid-4-col-25-25-25-25">4 Col (25x4)</a></li>
		</ul>

		<h4 id="grid-1-col">1 Column / Clearing Row</h4>
		{% include '/base/grid-1-col' %}
		<pre class="prettyprint linenums"><xmp>{% include '/base/grid-1-col' %}</xmp></pre>

		<h4 id="grid-2-col-50-50">2 Column - 50% / 50%</h4>
		{% include '/base/grid-2-col-50-50' %}
		<pre class="prettyprint linenums"><xmp>{% include '/base/grid-2-col-50-50' %}</xmp></pre>

