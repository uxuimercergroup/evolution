{% layout "ep/layout" %}
{% block content %}

<!-- LOGIN LAYOUT - CONTAINER - BEGINS -->
<div class="evo-login-template">

	<div class="evo-login-content-ctn">			
		<img src="{{ "mercer_logo_949x133.png" | asset_url }}" alt="Mercer" width="171" height="24" title="Mercer" />
		<p>Mercer helps you make the most of your future by helping you take action on your health, wealth, and career today.</p>
	</div>

	<!-- FORM COMPACT - BEGINS -->
	<form data-abide>
		<fieldset>
			<div class="row">
				<div class="small-12 medium-8 small-centered columns">
					<label>
						<input type="email" placeholder="Email Address" tabindex="" title="Enter your email address." required />
						<small class="error">Houston we have a problem.</small>
					</label>
				</div>
			</div>
			<div class="row">
				<div class="small-12 medium-8 small-centered columns">
					<label>
						<input type="password" placeholder="Password" tabindex="" title="Enter your password." required />
						<small class="error">Houston we have a problem.</small>
					</label>
				</div>
			</div>
			<div class="row evo-btn-row">
				<div class="small-12 small-centered columns">
					<a href="/ep/index" class="button expand radius show-for-small-only evo-btn" data-evo-button-icons="right" id="" tabindex="" title="Log In">
						<span class="evo-btn-text">Log In</span>
						<i class="evo-icon-arrow-right2 evo-icon-position-right" title=""></i>
					</a>
					<a href="/ep/index" class="button radius show-for-medium-up evo-btn" data-evo-button-icons="right" id="" tabindex="" title="Log In">
						<span class="evo-btn-text">Log In</span>
						<i class="evo-icon-arrow-right2 evo-icon-position-right" title=""></i>
					</a>
				</div>
			</div>
		</fieldset>
	</form>
	<!-- FORM COMPACT - ENDS -->

	<a href="javascript:;">Create Account</a>

</div>
<!-- LOGIN LAYOUT - CONTAINER - ENDS -->

{% endblock %}