				<div class="mul-box mul-box-rnd mul-ref-example-box">
					<h4 class="mul-hdr-rule">Basic Tooltip</h4>
					<!-- TOOLTIP - EXAMPLE - BEGINS -->
						<p>{% include "/objects/tooltip-default" %}</p>
						<p>{% include "/objects/tooltip-abbr" %}</p>
					<!-- TOOLTIP - EXAMPLE - ENDS -->	
