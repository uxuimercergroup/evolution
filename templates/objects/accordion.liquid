{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE TITLE - BEGINS -->
	<h1>{{ model.title }}</h1>
<!-- PAGE TITLE - ENDS -->

<!-- CONTENT SECTION - BEGINS -->
	<section class="col-24 mul-alternate-views-badge mul-ref-alternate-views-badge" data-alternate-views-badge="js-mul-ref-alternate-views-badge">

		{% include '/reference/reference-content' %}

	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - BEGINS -->
		{% if model.reference-get-code == "true" %}
			<div id="mul-ref-alternate-views-badge-content-panel-get-code">

				<h5 class="mul-hdr-rule">HTML</h5>

				{% if model.reference-example-versions == "true" %}
					<h5>{{ model.reference-example-version-label }}</h5>
				{% endif %}
				{{ model.reference-code-html-content-block-pre }}
				{{ global.reference-get-code-start-tag }}{% include '/objects/accordion' %}{{ global.reference-get-code-end-tag }}
				{{ model.reference-code-html-content-block-post }}

				{% if model.reference-example-versions == "true" %}
					<h5>{{ model.reference-example-version-label-2 }}</h5>
				{% endif %}
				{{ model.reference-code-html-content-block-pre-2 }}
				{{ global.reference-get-code-start-tag }}{% include '/objects/accordion-icons' %}{{ global.reference-get-code-end-tag }}
				{{ model.reference-code-html-content-block-post-2 }}

				{% if model.reference-code-js == "true" %}

					<h5 class="mul-hdr-rule">JS</h5>

					{% if model.reference-example-versions == "true" %}
						<h5>{{ model.reference-example-version-label }}</h5>
					{% endif %}
					{{ model.reference-code-js-content-block-pre }}
					{{ global.reference-get-code-start-tag }}{% include '/js/objects/accordion' %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-js-content-block-post }}

					{% if model.reference-example-versions == "true" %}
						<h5>{{ model.reference-example-version-label-2 }}</h5>
					{% endif %}
					{{ model.reference-code-js-content-block-pre-2 }}
					{{ global.reference-get-code-start-tag }}{% include '/js/objects/accordion-icons' %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-js-content-block-post-2 }}

				{% endif %}

			</div>
		{% endif %}
	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - ENDS -->

	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- EXAMPLE SECTION - BEGINS -->
	<section class="col-24 mul-ref-example">

	<!-- EXAMPLE SECTION - HEADER - BEGINS -->
		<h4 class="mul-hdr-dbl-rule mul-ref-example-hdr">{{ global.reference-example-hdr }}</h4>
	<!-- EXAMPLE SECTION - HEADER - ENDS -->

	<!-- EXAMPLE SECTION - CONTENT - BEGINS -->
		<section class="mul-ref-example-content">

		<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->

			{% if model.reference-example-versions == "true" %}
				<h5 class="mul-hdr-rule">{{ model.reference-example-version-label }}</h5>
			{% endif %}

			{% include '/objects/accordion' %}

		<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

		<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->

			{% if model.reference-example-versions == "true" %}
				<h5 class="mul-hdr-rule">{{ model.reference-example-version-label-2 }}</h5>
			{% endif %}

			{% include '/objects/accordion-icons' %}

		<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

		</section>
	<!-- EXAMPLE SECTION - CONTENT - ENDS -->

	</section>
<!-- EXAMPLE SECTION - ENDS -->

{% endblock %}