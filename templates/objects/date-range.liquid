{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE TITLE - BEGINS -->
	<h1>{{ model.title }}</h1>
<!-- PAGE TITLE - ENDS -->

<!-- CONTENT SECTION - BEGINS -->
	<section class="col-24 evo-alternate-views-badge evo-ref-alternate-views-badge" data-alternate-views-badge="js-evo-ref-alternate-views-badge">

		{% include '/reference/reference-content' %}

	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - BEGINS -->
		{% if model.reference-get-code == "true" %}
			<div id="evo-ref-alternate-views-badge-content-panel-get-code">

				<h3 class="evo-hdr-rule">HTML</h3>

				{{ model.reference-code-html-content-block-pre }}
				{{ global.reference-get-code-start-tag }}{% include '/objects/date-range' %}{{ global.reference-get-code-end-tag }}
				{{ model.reference-code-html-content-block-post }}

				{% if model.reference-code-js == "true" %}

					<h3 class="evo-hdr-rule">JS</h3>

					{{ model.reference-code-js-content-block-pre }}
					{{ global.reference-get-code-start-tag }}{% include '/js/objects/date-range' %}{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-js-content-block-post }}

				{% endif %}

			</div>
		{% endif %}
	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - ENDS -->

	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- EXAMPLE SECTION - BEGINS -->
	<section class="col-24 evo-ref-example">

	<!-- EXAMPLE SECTION - HEADER - BEGINS -->
		<h3 class="evo-hdr-dbl-rule evo-ref-example-hdr">{{ global.reference-example-hdr }}</h3>
	<!-- EXAMPLE SECTION - HEADER - ENDS -->

	<!-- EXAMPLE SECTION - CONTENT - BEGINS -->
		<section class="evo-ref-example-content">

			<section class="row">
				<div class="large-7 columns">
				<!-- EXAMPLE SECTION - BOX - BEGINS -->
					<div class="evo-box evo-box-rnd evo-ref-example-box">

					{% if model.reference-example-versions == "true" %}
						<h4 class="evo-hdr-rule">{{ model.reference-example-version-label }}</h4>
					{% endif %}

					<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
						<form>
							<fieldset>
								<div class="row">
									<label class="evo-required small-12 columns" for="js-evo-datepicker-range-stacked-from">
										<i class="evo-icon-evo-asterisk-small evo-icon-color-gray-dark evo-icon-position-left"></i>Label:
										{% include '/objects/date-range' %}
									</label>
								</div>
							</fieldset>
						</form>
					<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

					</div>
				<!-- EXAMPLE SECTION - BOX - ENDS -->

				<!-- EXAMPLE SECTION - BOX - BEGINS -->
					<div class="evo-box evo-box-rnd evo-ref-example-box">

					{% if model.reference-example-versions == "true" %}
						<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-2 }}</h4>
					{% endif %}

					<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
						<form>
							<fieldset>
								<div class="row evo-datepicker-ctn evo-datepicker-range evo-small-mediaquery-grid">
									<label class="small-4 columns evo-required" for="js-evo-datepicker-range-left-aligned-from">
										<i class="evo-icon-evo-asterisk-small evo-icon-color-gray-dark evo-icon-position-left"></i>Label:
									</label>
									<div class="small-4 columns">
										<input id="js-evo-datepicker-range-left-aligned-from" readonly="true" name="" value="" type="text" tabindex="" title="Select date." placeholder="From" data-evo-datepicker-message-label="This is a calendar message area for user messages related to dates" />
									</div>
									<div class="small-4 columns">
										<input id="js-evo-datepicker-range-left-aligned-to" readonly="true" name="" value="" type="text" tabindex="" title="Select date." placeholder="To" data-evo-datepicker-message-label="This is a calendar message area for user messages related to dates" />
									</div>
								</div>
							</fieldset>
						</form>
					<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->
					</div>
				<!-- EXAMPLE SECTION - BOX - ENDS -->

				<!-- EXAMPLE SECTION - BOX - BEGINS -->
					<div class="evo-box evo-box-rnd evo-ref-example-box">

					{% if model.reference-example-versions == "true" %}
						<h4 class="evo-hdr-rule">{{ model.reference-example-version-label-3 }}</h4>
					{% endif %}

					<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
						<form>
							<fieldset>
								<div class="row evo-datepicker-ctn evo-datepicker-range evo-small-mediaquery-grid">
									<div class="small-4 columns">
										<label class="evo-required evo-align-right" for="js-evo-datepicker-range-right-aligned-from">
											<i class="evo-icon-evo-asterisk-small evo-icon-color-gray-dark evo-icon-position-left"></i>Label:
										</label>
									</div>
									<div class="small-4 columns">
										<input class="col-12 first" id="js-evo-datepicker-range-right-aligned-from" readonly="true" name="" value="" type="text" tabindex="" title="Select date." placeholder="From" data-evo-datepicker-message-label="This is a calendar message area for user messages related to dates" />
									</div>
									<div class="small-4 columns">
										<input class="col-12" id="js-evo-datepicker-range-right-aligned-to" readonly="true" name="" value="" type="text" tabindex="" title="Select date." placeholder="To" data-evo-datepicker-message-label="This is a calendar message area for user messages related to dates" />
									</div>
								</div>
							</fieldset>
						</form>
					<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

					</div>
				<!-- EXAMPLE SECTION - BOX - ENDS -->
				</div>
				<div class="large-5 columns">
					
				</div>
			</section>
	<!-- EXAMPLE SECTION - CONTENT - ENDS -->

	</section>
<!-- EXAMPLE SECTION - ENDS -->

{% endblock %}