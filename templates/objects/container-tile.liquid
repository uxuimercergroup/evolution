{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<section class="row">
	<div class="small-12 columns">

	<!-- PAGE TITLE - BEGINS -->
		<h1>{{ model.title }}</h1>
	<!-- PAGE TITLE - ENDS -->

		{% include '/reference/reference-content' %}

	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - BEGINS -->
		{% if model.reference-get-code == "true" %}

			<h3 class="evo-hdr-rule">HTML</h3>

			{{ model.reference-code-html-content-block-pre }}

			{{ global.reference-get-code-start-tag }}<div class="evo-tile-ctn" data-palette-color="gray-darkest">{{ global.reference-get-code-end-tag }}

			{% if model.reference-example-versions == "true" %}
				<h4>{{ model.reference-example-version-label }}</h4>
			{% endif %}
			{{ global.reference-get-code-start-tag }}{% include '/objects/tile-ctn' %}{{ global.reference-get-code-end-tag }}
			{{ model.reference-code-html-content-block-post }}

			{% if model.reference-code-js == "true" %}

				<h3 class="evo-hdr-rule">JS</h3>

				{% if model.reference-example-versions == "true" %}
					<h4>{{ model.reference-example-version-label }}</h4>
				{% endif %}
				{{ model.reference-code-js-content-block-pre }}
				{{ global.reference-get-code-start-tag }}{ include '/js/' }{{ global.reference-get-code-end-tag }}
				{{ model.reference-code-js-content-block-post }}

			{% endif %}

		{% endif %}
	<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - ENDS -->
		
	</div>
</section>


<!-- EXAMPLE SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

		<!-- EXAMPLE SECTION - HEADER - BEGINS -->
			<h3 class="evo-hdr-dbl-rule evo-ref-example-hdr">{{ global.reference-example-hdr }}</h3>
		<!-- EXAMPLE SECTION - HEADER - ENDS -->

		<!-- EXAMPLE SECTION - CONTENT - BEGINS -->
			<section class="evo-ref-example-content">

			<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
				<section class="row">
					<div class="medium-4 columns">{% include '/objects/tile-ctn' %}</div>
					<div class="medium-8 columns">
					<!-- TILES - BEGINS -->
						<div class="evo-tile-ctn" data-palette-color="gray-darkest">
							<div class="evo-tile-hdr-stripe"></div>
							<div class="evo-box-hdr js-evo-width-check js-evo-toggle-content-icon" data-evo-toggle="2">
								<i class="evo-icon-plus-circle evo-icon-position-left right evo-tile-icon-position" href="javascript:;" title="Toggle Open/Closed"></i>
								<h4 class="evo-hdr-rule">Header 1</h4>
							</div>
							<div class="evo-box-bdy evo-scroll-pane js-evo-scroll-pane" id="div2">{{ 4 | lorem_ipsum: 'p' }}</div>
						</div>
					<!-- TILES - ENDS -->
					</div>
				</section>
				<section class="row">
					<div class="medium-12 columns">
					<!-- TILES - BEGINS -->
						<div class="evo-tile-ctn" data-palette-color="gray-darkest">
							<div class="evo-tile-hdr-stripe"></div>
							<div class="evo-box-hdr js-evo-width-check js-evo-toggle-content-icon" data-evo-toggle="3">
								<i class="evo-icon-plus-circle evo-icon-position-left right evo-tile-icon-position" href="javascript:;" title="Toggle Open/Closed"></i>
								<h4 class="evo-hdr-rule">Header 1</h4>
							</div>
							<div class="evo-box-bdy evo-scroll-pane js-evo-scroll-pane" id="div3">{{ 6 | lorem_ipsum: 'p' }}</div>
						</div>
					<!-- TILES - ENDS -->
					</div>
				</section>
				
			<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

			</section>
		<!-- EXAMPLE SECTION - CONTENT - ENDS -->

		</div>
	</section>
<!-- EXAMPLE SECTION - ENDS -->

{% endblock %}