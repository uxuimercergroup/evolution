{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}

{% block content %}
<!-- PAGE TITLE - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			<h1>{{ model.title }}</h1>
		</div>
	</section>
<!-- PAGE TITLE - ENDS -->

<!-- CONTENT SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			{% include '/reference/reference-content' %}

		<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - BEGINS -->
			{% if model.reference-get-code == "true" %}
				<h3 class="evo-hdr-rule">HTML</h3>

				{% if model.reference-example-versions == "true" %}
					<h4>{{ model.reference-example-version-label }}</h4>
				{% endif %}
				{{ model.reference-code-html-content-block-pre }}
				{{ global.reference-get-code-start-tag }}{ include '' }{{ global.reference-get-code-end-tag }}
				{{ model.reference-code-html-content-block-post }}

				{% if model.reference-code-js == "true" %}
					<h3 class="evo-hdr-rule">JS</h3>

					{% if model.reference-example-versions == "true" %}
						<h4>{{ model.reference-example-version-label }}</h4>
					{% endif %}
					{{ model.reference-code-js-content-block-pre }}
					{{ global.reference-get-code-start-tag }}{ include '/js/' }{{ global.reference-get-code-end-tag }}
					{{ model.reference-code-js-content-block-post }}
				{% endif %}
			{% endif %}
		<!-- CONTENT SECTION - CONTENT PANEL - GET CODE - ENDS -->

		</div>
	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- EXAMPLE SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

		<!-- EXAMPLE SECTION - HEADER - BEGINS -->
			<h3 class="evo-hdr-rule evo-ref-example-hdr">{{ global.reference-example-hdr }}</h3>
		<!-- EXAMPLE SECTION - HEADER - ENDS -->

		<!-- EXAMPLE SECTION - CONTENT - BEGINS -->
			<section class="evo-ref-example-content">

			<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
				{% if model.reference-example-versions == "true" %}
					<h4 class="evo-hdr-rule">{{ model.reference-example-version-label }}</h4>
				{% endif %}
				{ include '' }
			<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->

			<!-- EXAMPLE SECTION - BOX - BEGINS -->
				<div class="evo-box evo-box-rnd evo-ref-example-box">
					{% if model.reference-example-versions == "true" %}
						<h4 class="evo-hdr-rule">{{ model.reference-example-version-label }}</h4>
					{% endif %}

					<!-- {{ model.title | upcase }} - EXAMPLE - BEGINS -->
						{ include '' }
					<!-- {{ model.title | upcase }} - EXAMPLE - ENDS -->
				</div>
			<!-- EXAMPLE SECTION - BOX - ENDS -->

			</section>
		<!-- EXAMPLE SECTION - CONTENT - ENDS -->
		
		</div>
	</section>
<!-- EXAMPLE SECTION - ENDS -->
{% endblock %}