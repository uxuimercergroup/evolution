						<li class="tab-title evo-no-padding-right evo-component-page-tab-back-to-top" role="presentation">
							<a data-scroll-to-top href="#top" tabindex="0" aria-selected="false" aria-controls=""><span class="text"><i class="evo-icon-circle-up2 evo-icon-size-small evo-center-block-vertical-element evo-center-block" title="Back to Top" aria-label="Back to Top"></i></span></a>
						</li>
					</ul>
				</div>
			<!-- TABS - ENDS -->

			</section>

		<!-- COMPONENT EXAMPLE - BEGINS -->
			<section class="row">
				<div class="small-12 columns">

					<hr class="evo-site-component-divider">

					<div class="tabs-content evo-tabs-content-category-pages">

					<!-- TAB 1 (overview section) - BEGINS -->
						<section role="tabpanel" aria-hidden="false" class="content active" id="{{ model.standard-02 }}-1">
						<!-- COMPONENT TITLE AND DESCRIPTION - BEGINS -->
							<p>
								Buttons act as the focal point for user interaction as it relates to saving data or completing an action. Evolution Core buttons depend on Foundation's <a href="http://foundation.zurb.com/docs/components/buttons.html" target="_blank">Buttons</a>.
							</p>
						<!-- COMPONENT TITLE AND DESCRIPTION - ENDS -->
						</section>
					<!-- TAB 1 (overview section) - ENDS -->

					<!-- TAB 2 (usage section) - BEGINS -->
						<section role="tabpanel" aria-hidden="true" class="content" id="{{ model.standard-02 }}-2">
							<p>Usage details go here.</p>
						</section>
					<!-- TAB 2 (usage section) - ENDS -->

					<!-- TAB 3 (mobile section) - BEGINS -->
						<section role="tabpanel" aria-hidden="true" class="content" id="{{ model.standard-02 }}-3">
							<p>Mobile view info goes here.</p>
						</section>
					<!-- TAB 3 (mobile section) - ENDS -->

					<!-- TAB 4 (get code section) - BEGINS -->
						<section role="tabpanel" aria-hidden="true" class="content" id="{{ model.standard-02 }}-4">

						<!-- DOWNLOAD - BEGINS -->
							<h6>Download Code</h6>
							<p>
								<a href="{{ model.standard-download-url-02 }}" class="button radius evo-button evo-site-button evo-no-margin-bottom" data-evo-button-icons="left" id="" role="button" title="Download" aria-label="">
									<i class="evo-icon-download4 evo-icon-position-left" title=""></i>
									<span class="evo-button-text">{{ model.standard-02 }} v{{ model.standard-version-02 }}</span>
								</a>
							</p>
							<hr />
						<!-- DOWNLOAD - ENDS -->

						<!-- EXAMPLE HTML - BEGINS -->
							<h6>HTML</h6>
							{{ global.reference-component-html-instructions }}
							<hr />
						<!-- EXAMPLE HTML - ENDS -->

						<!-- DEPENDENCY LIST - BEGINS -->
							{% if model.standard-reference-dependency-02 == "true" %}
								<h6>Dependencies</h6>
								<ul>
									{% if model.standard-reference-dependency-evolution-02 == "true" %}
										<li>
											<a href="/reference/index">Evolution Core {{ global.version_number }}</a>
										</li>
									{% endif %}

									{% if model.standard-reference-dependency-foundation-02 == "true" %}
										<li>
											<a href="http://foundation.zurb.com/" target="_blank">Zurb Foundation {{ global.foundation_version }}</a>
											<ul>
												<li>
													<a href="http://foundation.zurb.com/docs/components/buttons.html" target="_blank">Buttons</a>
												</li>
											</ul>
										</li>
									{% endif %}

									{% if model.standard-reference-dependency-jquery-02 == "true" %}
										<li><a href="https://jquery.com/" target="_blank">jQuery {{ global.jquery_version }}</a></li>
									{% endif %}

									{% if model.standard-reference-dependency-jquery-ui-02 == "true" %}
										<li><a href="http://jqueryui.com/" target="_blank">jQuery UI {{ global.jquery_ui_version }}</a></li>
									{% endif %}

									{{ model.standard-reference-dependency-list-02 }}
								</ul>
							{% endif %}
						<!-- DEPENDENCY LIST - ENDS -->

						</section>
					<!-- TAB 4 (get code section) - ENDS -->

					</div>
				</div>
			</section>

			<section class="row">
				<div class="small-12 columns">

				<!-- COMPONENT CODE - BEGINS -->
					{{ "buttons.css" | asset_url | stylesheet_tag }}
					{% include "ee/standards/buttons/buttons" %}
				<!-- COMPONENT CODE - ENDS -->

				</div>
			</section>
		<!-- COMPONENT EXAMPLE - ENDS -->

		</div>
	</section>
