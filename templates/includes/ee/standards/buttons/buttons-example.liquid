						<li class="tab-title" role="presentation">
							<a href="#{{ model.standard-02 }}-2" role="tab" tabindex="0" aria-selected="false" aria-controls="tabs2"><span class="text"><i class="evo-icon-site-book3 evo-icon-size-small evo-center-block-vertical-element evo-center-block active" title="Usage" aria-label="Usage"></i></span></a>
						</li>
						<li class="tab-title" role="presentation">
							<a href="#{{ model.standard-02 }}-3" role="tab" tabindex="0" aria-selected="false" aria-controls="tabs3"><span class="text"><i class="evo-icon-site-mobile evo-icon-size-small evo-center-block-vertical-element evo-center-block" title="Mobile" aria-label="Mobile"></i></span></a>
						</li>
						<li class="tab-title" role="presentation">
							<a href="#{{ model.standard-02 }}-4" role="tab" tabindex="0" aria-selected="false" aria-controls="tabs4"><span class="text"><i class="evo-icon-site-file-xml2 evo-icon-size-small evo-center-block-vertical-element evo-center-block" title="Technical" aria-label="Code"></i></span></a>
