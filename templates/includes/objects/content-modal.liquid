<button class="evo-btn evo-btn-medium evo-btn-primary evo-btn-first" id="js-evo-content-modal-example-btn">Open Content Modal</button>

<!-- Modal dialog source element -->
<div id="js-evo-content-modal-example" class="evo-content-modal-ctn">

	<div class="js-evo-content-modal-tabs">
		<div class="col-1 first evo-content-modal-util-bar">

			<!-- TABS MAIN NAVBAR -->
			<ul class="evo-content-modal-tabs evo-content-modal-tab-navbar">
				<li><a class="evo-icon-clipboard evo-icon-size-medium" href="#evo-content-modal-tabs-1" title="Details"></a></li>
				<li><a class="evo-icon-files evo-icon-size-medium" href="#evo-content-modal-tabs-2" title="Documents"></a></li>
				<li><a class="evo-icon-evo-task-download evo-icon-size-medium" href="#evo-content-modal-tabs-3" title="Delegate"></a></li>
				<li class="last-child"><a class="evo-icon-evo-task-reassign evo-icon-size-medium" href="#evo-content-modal-tabs-4" title="Reassign"></a></li>
			</ul>

			<!-- TABS UTILITY NAVBAR -->
			<ul class="evo-content-modal-tabs evo-content-modal-tab-util-bar">
				<!-- <li class="evo-content-modal-navbar-active"><a class="evo-icon-print evo-icon-size-medium" href="javascript:;" title="Print"></a></li> -->
				<li><a class="evo-icon-print evo-icon-size-medium" href="javascript:;" title="Print"></a></li>
				<li class="last-child"><a class="evo-icon-bubble evo-icon-size-medium" href="javascript:;" title="Comment"></a></li>
			</ul>

		</div>

		<!-- MAIN CONTENT AREA -->
		<div class="col-23 evo-content-modal-main-content">

			<!-- TAB 1 - BEGINS -->
			<div class="js-evo-content-modal-scroll" id="evo-content-modal-tabs-1">
				<h1>Header 1</h1>
				{{ 3 | lorem_ipsum:'p' }}
			</div>
			<!-- TAB 1 - ENDS -->

			<!-- TAB 2 - BEGINS -->
			<div class="js-evo-content-modal-scroll" id="evo-content-modal-tabs-2">
				<h1>Header 2</h1>
				{{ 3 | lorem_ipsum:'p' }}

				<!-- INTERACTIVE DATA TABLE - EXAMPLE - BEGINS -->
				<table class="evo-table evo-footable evo-table-borders evo-table-striped evo-table-hover" data-filter="#filter" id="" border="0" cellpadding="0" cellspacing="0" title="" summary="">
					<caption>
						<div class="col-19 first">&nbsp;</div>
						<div class="col-5 evo-tbl-data-filter">
							<input id="filter" type="text" placeholder="Filter" tabindex="" title="Type to filter results." />
						</div>
					</caption>
					<thead>
						<tr>
							<th class="col-1" scope="col" data-sort-ignore="true">
								<input type="checkbox" class="js-evo-select-all-checkboxes">
							</th>
							<th class="col-6" scope="col"><a href="javascript:;">Task</a></th>
							<th data-sort-initial="ascending" class="col-2" scope="col"><a href="javascript:;">Type</a></th>
							<th class="col-8" scope="col">
								<a href="javascript:;">Client</a> |
								<a href="javascript:;">Location</a>
							</th>
							<th class="col-4" scope="col"><a href="javascript:;">Assigned To</a></th>
							<th class="col-3 text-right evo-nowrap" scope="col"><a href="javascript:;">Start Date</a></th>
							<th class="col-3 text-right evo-nowrap" scope="col"><a href="javascript:;">End Date</a></th>
						</tr>
					</thead>
					<tbody>

						{% for item in global.table_data %}
						<tr>
							<td>{{ item.checkbox }}</td>
							<td>{{ item.task }}</td>
							<td>{{ item.type_global }}</td>
							<td>
								<a href="javascript:;">{{ item.company }}</a> |
								{{ item.location}}
							</td>
							<td>
								{{ item.abbrev_first_name}} {{ item.last_name}}
							</td>
							<td class="text-right evo-nowrap">{{ item.start_date }}</td>
							<td class="text-right evo-nowrap">{{ item.end_date }}</td>
						</tr>
						{% endfor %}
						
					</tbody>
				</table>
				<!-- INTERACTIVE DATA TABLE - EXAMPLE - ENDS -->

			</div>
			<!-- TAB 2 - ENDS -->

			<!-- TAB 3 - BEGINS -->
			<div class="js-evo-content-modal-scroll" id="evo-content-modal-tabs-3">
				<h1>Header 3</h1>
				{{ 35 | lorem_ipsum:'p' }}
			</div>
			<!-- TAB 3 - ENDS -->

			<!-- TAB 4 - BEGINS -->
			<div class="js-evo-content-modal-scroll" id="evo-content-modal-tabs-4">
				<h1>Header 4</h1>
				{{ 35 | lorem_ipsum:'p' }}
			</div>
			<!-- TAB 4 - ENDS -->

		</div>
	</div>
</div>