	<!-- TOP BAR CONTAINER - DEFAULT - BEGINS -->
	<div class="fixed show-for-large-up">

		<!-- TOP BAR - BEGINS -->
		<nav class="top-bar evo-top-bar" data-topbar role="navigation">
			
