							<li>
								<a href="/ee/components/index">Components</a>
							</li>
							<li class="divider"></li>
							<li>
								<a href="/ee/templates/index">Templates</a>
							</li>
						</ul>
					</li>
				</ul>
				<!-- TOP BAR RIGHT NAV SECTION - ENDS -->

				<!-- TOP BAR LEFT NAV SECTION - BEGINS -->
				<ul class="title-area left">
					<li class="has-dropdown">
						<a class="evo-icon-menu7"></a>
						<ul class="dropdown">
							<li {% if model.page == "home" %}class="active"{% endif %}>
								<a href="/">Home</a>
							</li>
							<li class="divider"></li>
