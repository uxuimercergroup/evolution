<header role="banner" class="evo-masthead">

	<!-- MASTHEAD - BEGINS -->
	<div class="evo-masthead-adjust">
		<div class="evo-masthead-content-ctn">

			<!-- MASTHEAD LOGO - BEGINS -->
			<div class="col-18 first">
				<h1 class="evo-logo">
					<a href="/index">PRODUCT <span>NAME</span></a>
				</h1>
			</div>
			<!-- MASTHEAD LOGO - ENDS -->

			{% if global.user_profile == "simple" %}

				<!-- MASTHEAD PROFILE SIMPLE - BEGINS -->
				{% include "/base/masthead-profile-simple" %}
				<!-- MASTHEAD PROFILE SIMPLE - ENDS -->

			{% else %}

				<!-- MASTHEAD PROFILE MENU - BEGINS -->
				{% include "/base/masthead-profile-menu" %}
				<!-- MASTHEAD PROFILE MENU - ENDS -->

			{% endif %}
			
		</div>
	</div>
	<!-- MASTHEAD - ENDS -->

	<!-- MASTHEAD NAVBAR - BEGINS -->
	<div class="evo-masthead-navbar-ctn">
		<div class="evo-masthead-adjust">

			<!-- NAVBAR - BEGINS -->
			<nav role="navigation" class="evo-navbar">
				<ul class="evo-horizontal-list">
					<li><a class="evo-first-child {% if mixture.url == "index" %}evo-navbar-item-active{% endif %}" href="/index">Home</a></li>
					<li><a href="#">Nav Option 2</a></li>
					<li><a href="#">Nav Option 3</a></li>
					<li><a href="#">Nav Option 4</a></li>
					<li><a href="#">Nav Option 5</a></li>
				</ul>
			</nav>
			<!-- NAVBAR - ENDS -->

		</div>
	</div>
	<!-- MASTHEAD NAVBAR - BEGINS -->

</header>