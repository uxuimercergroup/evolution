<!-- MASTHEAD - BEGINS -->
{% if global.type_of_navbar != 'toolbar' %}
	<section class="evo-masthead">
		<div class="evo-masthead-adjust">
			<section class="col-18 first evo-logo evo-small-mediaquery-grid">
			{% if global.masthead_logo_primary == 'true' %}
				<div class="evo-logo-col-1">
					{% include '/base/header/company-logo-primary' %}
				</div>
			{% endif %}

			{% if global.masthead_company_text == 'true' %}
				<div class="evo-logo-col-2">
					<a href="/index">MERCER <span>EVOLUTION</span></a>
				</div>
			{% endif %}

				<div class="evo-logo-col-3 evo-mb-navbar-ctn">
				<!-- MOBILE MENU ICON - BEGINS -->
					<ul class="sm evo-nav-menus evo-menu-ctn" data-menu="click">
						<li class="evo-header-icon">
							<a href="javascript:;" class="js-evo-header-mobile-menu-toggle" data-evo-header-mobile-menu-toggle="navbar"><i class="evo-icon-menu3"></i></a>
						</li>
					</ul>
				<!-- MOBILE MENU ICON - ENDS -->
				</div>
			</section>
			<section class="col-6 evo-hidden-small-mediaquery">
			{% if global.masthead_identifier_or_logo == 'identifier' %}
				{% include '/base/header/user-identifier' %}
			{% elseif global.masthead_identifier_or_logo == 'logo' %}
				{% include '/base/header/company-logo-secondary' %}
			{% else %}

			{% endif %}
			</section>
		</div>
	</section>
{% endif %}
<!-- MASTHEAD - ENDS -->