{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}
{% block content %}

<!-- PAGE TITLE - BEGINS -->
	<h1>{{ model.title }}</h1>
<!-- PAGE TITLE - ENDS -->

<!-- CONTENT SECTION - BEGINS -->
	<section class="col-24">
		{{ model.reference-overview }}
	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- EXAMPLE SECTION - BEGINS -->
	<section class="col-24 evo-ref-example">

		<div class="col-16 first">

		<!-- BROWSER GRADING TABLE - BEGINS -->
			<div class="evo-table-small-mediaquery">
				<table class="evo-table evo-table-borders evo-table-striped evo-table-hover" id="" border="0" cellpadding="0" cellspacing="0" title="" summary="">
					<thead>
						<tr>
							<th class="" scope="col">&nbsp;</th>
							<th class="" scope="col">A Grade</th>
							<th class="" scope="col">B Grade</th>
							<th class="" scope="col">F Grade</th>
						</tr>
					</thead>
					<tbody>
						{% for item in model.reference-browser-table-data %}
						<tr>
							<td class="evo-bold">{{ item.browserType }}</td>
							<td class="">{{ item.gradeA }}</td>
							<td class="">{{ item.gradeB }}</td>
							<td class="">{{ item.gradeF }}</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		<!-- BROWSER GRADING TABLE - ENDS -->

		<!-- BROWSER SUPPORT FAQ - BEGINS -->
			<h3 class="evo-hdr-rule">FAQ's</h3>
			<ul class="evo-data-list evo-data-list-stacked">
				{% for item in model.reference-browser-faq-data %}
				<li>
					<span class="evo-data-list-label">{{ item.reference-browser-faq-data-question }}</span>
					<span class="evo-data-list-item">{{ item.reference-browser-faq-data-answer }}</span>
				</li>
				{% endfor %}
			</ul>
		<!-- BROWSER SUPPORT FAQ - END -->

		</div>
		<div class="col-8">

		<!-- BROWSER GRADING KEY - BEGINS -->
			<h5>{{ model.reference-browser-key-header }}</h5>
			<ul class="evo-data-list">
				<li>{{ model.reference-browser-grade-a }}</li>
				<li>{{ model.reference-browser-grade-b }}</li>
				<li>{{ model.reference-browser-grade-f }}</li>
			</ul>
		<!-- BROWSER GRADING KEY - ENDS -->

		</div>

	</section>
<!-- EXAMPLE SECTION - ENDS -->

{% endblock %}