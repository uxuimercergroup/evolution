{% block title %}{{ model.title }} : {{ global.site_title }}{% endblock %}

{% block content %}
<!-- PAGE TITLE - BEGINS -->
	<section class="row">
		<div class="small-12 columns">
			<h1>{{ model.title }}</h1>
		</div>
	</section>
<!-- PAGE TITLE - ENDS -->

<!-- CONTENT SECTION - BEGINS -->
	<section class="row">
		<div class="small-12 columns">

			<p>{{ model.overview }}</p>

			{% for item in model.design_principles %}
				<h3>{{ item.header }}</h3>
				<p>{{ item.paragraph }}</p>
			{% endfor %}
		
		</div>
	</section>
<!-- CONTENT SECTION - ENDS -->
{% endblock %}