<footer class="evo-thin-footer evo-site-thin-footer">

<!-- CONTENT SECTION - BEGINS -->
	<section class="row evo-footer-content-section">
		<div class="evo-contain-to-grid">
			<div class="medium-6 columns">

				<!-- FOOTER - BACK TO TOP - BEGINS -->
				<a href="#top" class="button expand radius evo-button tiny show-for-small-only" role="button">Back To Top</a>
				<!-- FOOTER - BACK TO TOP - ENDS -->

				<section class="row collapse">
					<div class="small-only-text-center medium-4 columns">

					<!-- SOCIAL MEDIA BADGES - BEGINS -->
						<div class="evo-social-media-badges-ctn">
							{{> icon tagname="a" class="evo-icon-twitter2 evo-icon-size-medium" href="https://twitter.com/mercerglobalux" icon-title="Twitter" aria-label="Twitter"}}
							{{> icon tagname="a" class="evo-icon-linkedin evo-icon-size-medium" href="https://www.linkedin.com/company/mercer" icon-title="LinkedIn" aria-label="LinkedIn"}}
						</div>
					<!-- SOCIAL MEDIA BADGES - ENDS -->

					</div>
				</section>
			</div>
			<div class="medium-6 small-only-text-center columns">
				<div class="evo-footer-links">
					<ul class="inline-list evo-inline-list evo-inline-list-pipes">
					{{#each footer.nav}}
						<li><a href="{{url}}">{{{name}}}</a></li>
					{{/each}}
					</ul>
				</div>
			</div>
		</div>
	</section>
<!-- CONTENT SECTION - ENDS -->

<!-- BRAND BAR - BEGINS -->
	<section class="row evo-thin-footer-brand-bar">
		<div class="evo-contain-to-grid">

		<!-- FOOTER BRAND LOGO - BEGINS -->
			<div class="medium-6 medium-push-6 columns small-text-center medium-text-right evo-footer-logo">
				<a class="small-only-text-center" href="http://www.mercer.com/" title="Mercer - Make Tomorrow, Today">
					<img src="{{assets}}/images/core/corp-logos/mercer/mercer_mtt_horizontal_rgb{{#is package.product_suite 'bp'}}_reverse{{/is}}.png" alt="Mercer - Make Tomorrow, Today" width="395" height="15">
				</a>
			</div>
		<!-- FOOTER BRAND LOGO - ENDS -->

		<!-- FOOTER COPYRIGHT - BEGINS -->
			<div class="medium-6 medium-pull-6 columns">
				<p class="small-only-text-center evo-footnote evo-footer-copyright">
					<small>&copy; {{now "%Y"}} {{footer.copyright_text}}</small>
				</p>
			</div>
		<!-- FOOTER COPYRIGHT - ENDS -->
		
		</div>
	</section>
<!-- BRAND BAR - ENDS -->

</footer>