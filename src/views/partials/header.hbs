<header class="evo-header evo-site-header" role="banner">

<!-- OFF-CANVAS - TITLE BAR - BEGINS -->
	<nav class="title-bar" data-responsive-toggle="evo-site-top-bar" data-hide-for="large" role="navigation">
		<div class="title-bar-left">
			<button class="menu-icon" type="button" data-open="evo-off-canvas-left-menu">
				<i class="evo-icon-menu7 evo-icon-size-medium" title="Menu"></i>
			</button>
		</div>
		<div class="title-bar-title">
			<a class="show-for-small-only" href="/">{{ global.title }}</a>
			<a class="show-for-medium-only" href="/">{{ global.company }} {{ global.title }}</a>
		</div>
		<div class="title-bar-right">
		</div>
	</nav>
<!-- OFF-CANVAS - TITLE BAR - ENDS -->

<!-- OFF-CANVAS - LEFT MENU - BEGINS -->
	<div class="off-canvas position-left" id="evo-off-canvas-left-menu" data-off-canvas>
		<ul class="vertical menu" data-drilldown>
			{{#if navigation.nav_label}}
			<li>
				<label>{{navigation.nav_label}}</label>
			</li>
			{{/if}}
			{{#each navigation.nav}}
			<li>
				<a href="">{{section}}</a>
				<ul class="vertical menu">
				{{#each sub_section}}
					{{#if label}}
					<li>
						<label>{{label}}</label>
					</li>
					{{/if}}
					{{#each nav_items}}
					<li>
						<a href="{{url}}">{{name}}</a>
					</li>
					{{/each}}
				{{/each}}
				</ul>
			</li>
			{{/each}}
		</ul>
	</div>
<!-- OFF-CANVAS - LEFT MENU - ENDS -->

<!-- TOP BAR - BEGINS -->
	<nav class="top-bar evo-top-bar" id="evo-site-top-bar" role="navigation">
		
	<!-- TOP BAR TITLE - BEGINS -->
		<div class="top-bar-title">
			<a href="/">{{ global.company }} <span>{{ global.title }}</span></a>
		</div>
	<!-- TOP BAR TITLE - ENDS -->

	<!-- TOP BAR CONTENT - BEGINS -->
		<div class="evo-top-bar-content">

		<!-- TOP BAR LEFT SECTION - BEGINS -->
			<div class="top-bar-left">
			</div>
		<!-- TOP BAR LEFT SECTION - ENDS -->

		<!-- TOP BAR RIGHT SECTION - BEGINS -->
			<div class="top-bar-right">
				<ul class="dropdown menu" data-dropdown-menu>

				<!-- TOP BAR - MEGA MENU - BEGINS -->
					<li data-evo-mega-menu>
						<a class="dropdown" data-toggle="mega-menu">Mega Menu</a>
						<div class="dropdown-pane" id="mega-menu" data-dropdown data-options="closeOnClick:true; hover: true; hoverPane: true;">
							<div class="row expanded">
								<div class="large-3 columns">
									<h6 class="evo-hdr-rule">H6 Header</h6>
									<ul class="no-bullet">
										<li><a href="#/">Section One</a></li>
										<li><a href="#/">Section Two</a></li>
										<li><a href="#/">Section Three</a></li>
										<li><a href="#/">Section Four</a></li>	
									</ul>
								</div>
								<div class="large-3 columns">
									<h6 class="evo-hdr-rule">H6 Header</h6>
									<ul class="no-bullet">
										<li><a href="#/">Section One</a></li>
										<li><a href="#/">Section Two</a></li>
										<li><a href="#/">Section Three</a></li>
										<li><a href="#/">Section Four</a></li>	
									</ul>
								</div>
								<div class="large-3 columns">
									<h6 class="evo-hdr-rule">H6 Header</h6>
									<ul class="no-bullet">
										<li><a href="#/">Section One</a></li>
										<li><a href="#/">Section Two</a></li>
										<li><a href="#/">Section Three</a></li>
										<li><a href="#/">Section Four</a></li>	
									</ul>
								</div>
								<div class="large-3 columns">
									<h6 class="evo-hdr-rule">H6 Header</h6>
									<ul class="no-bullet">
										<li><a href="#/">Section One</a></li>
										<li><a href="#/">Section Two</a></li>
										<li><a href="#/">Section Three</a></li>
										<li><a href="#/">Section Four</a></li>	
									</ul>
								</div>
							</div>
						</div>
					</li>
				<!-- TOP BAR - MEGA MENU - ENDS -->

					{{#each navigation.nav}}
					<li>
						<a href="javascript:;">{{section}}</a>
						<ul class="dropdown menu" data-dropdown-menu>
						{{#each sub_section}}
							{{#if label}}
							<li>
								<label>{{label}}</label>
							</li>
							{{/if}}
							{{#each nav_items}}
							<li>
								<a href="{{url}}">{{name}}</a>
							</li>
							{{/each}}
						{{/each}}
						</ul>
					</li>
					{{/each}}
				</ul>
			</div>
		<!-- TOP BAR RIGHT SECTION - ENDS -->

		</div>
	<!-- TOP BAR CONTENT - ENDS -->

	</nav>
<!-- TOP BAR - ENDS -->

</header>