									{{#if icons.dependency_data.jquery_ui_dependencies}}
										<ul class="no-bullet">
										{{#each icons.dependency_data.jquery_ui_dependencies}}
											<li><a href="{{url}}" target="_blank">{{name}}</a></li>
										{{/each}}
										</ul>
									{{/if}}
									</li>
								{{/is}}
								{{#each icons.dependency_data.other}}
									<li><a href="{{url}}" {{#is external_link 'true'}}target="_blank"{{/is}}>{{name}}</a></li>
								{{/each}}
							</ul>
						<!-- DEPENDECY SIDENAV - ENDS -->
							{{/is}}
						</nav>
					</div>
				<!-- SIDENAV - ENDS -->
				</div>
			</section>
			
		</section>
