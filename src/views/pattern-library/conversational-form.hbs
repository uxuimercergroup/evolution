											{{#if conversational-form.dependency_data.jquery_ui_dependencies}}
												<ul>
												{{#each conversational-form.dependency_data.jquery_ui_dependencies}}
													<li><a href="{{url}}" target="_blank">{{name}}</a></li>
												{{/each}}
												</ul>
											{{/if}}
											</li>
										{{/is}}
										{{#each conversational-form.dependency_data.other}}
