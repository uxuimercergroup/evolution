									<span class="copy-to-clipboard" data-clipboard-snippet data-clipboard-text="${{{data_value}}}">{{name}}</span><br>
									<span class="copy-to-clipboard" data-clipboard-snippet data-clipboard-text="{{{hex}}}">{{{hex}}}</span>
								</div>
							</div>
							{{/each}}
						</section>
					</div>
					{{/each}}
				<!-- EXAMPLE BOX - ENDS -->

				</div>
