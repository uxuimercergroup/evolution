							{{#each color-palette.data}}
								<li><a href="#{{hyphenate name}}">{{name}}</a></li>
							{{/each}}
							</ul>
						</nav>
					</div>
				<!-- SIDENAV - ENDS -->
				</div>
			</section>

		</section>
