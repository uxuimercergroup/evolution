						<dl class="sub-nav">
							<dd><a data-evo-scroll-to-location href="#{{hyphenate }}">{{}}</a></dd>
						</dl>
						<hr>
						--}}
					</div>
				<!-- SIDENAV - ENDS -->
				</div>
			</section>
			
		</section>
	<!-- TAB PANEL 3 - BEGINS -->

	<!-- TAB PANEL 4 - BEGINS -->
		<section class="tabs-panel evo-tabs-panel evo-site-tabs-content--pattern-library-tab-panel" id="evoPanel3">

			<section class="row" data-equalizer="tab-panel">
				<div class="medium-12 large-9 columns evo-keyline-right evo-spacer-padding-top-large" data-equalizer-watch="tab-panel">
					
				<!-- CONTENT SECTION - BEGINS -->
					<section class="evo-site-tabs-content--pattern-library-tab-content-section" id="{{hyphenate type.text_alignment_header}}">
						<div class="evo-site-markdown-content-block">
{{# markdown}}
##### {{type.text_alignment_header}}
{{/ markdown}}
						</div>

					<!-- TEXT ALIGNMENT SETTINGS TABLE - BEGINS -->
						<div class="evo-table-small-mediaquery">
							<table class="hover evo-table evo-site-margin-padding-settings-table" data-evo-data-table="evo-data-table-margin-padding-settings" width="100%" cellpadding="0" cellspacing="0" border="0" title="" summary="" role="grid">
								<thead>
									<tr>
										<th scope="column">Class Value</th>
									</tr>
								</thead>
								<tbody>
								{{#each type.text_alignment_settings}}
									<tr>
										<td class="evo-site-margin-padding-settings-table--copy-cursor copy-to-clipboard" data-clipboard-snippet data-clipboard-text="{{ text-class }}">{{ text-class }}</td>
									</tr>
								{{/each}}
								</tbody>
							</table>
						</div>
					<!-- TEXT ALIGNMENT SETTINGS TABLE - ENDS -->

					</section>
				<!-- CONTENT SECTION - ENDS -->

				</div>
				<div class="large-3 columns show-for-large-up evo-spacer-padding-top-large" data-equalizer-watch="tab-panel">
					
				<!-- SIDENAV - BEGINS -->
					<div class="evo-site--pattern-library-sidenav-magellan" data-evo-fixed-by-scroll="evo-magellan--side-nav" data-evo-magellan>
						<dl class="sub-nav">
							<dd><a data-evo-scroll-to-location href="#{{hyphenate type.text_alignment_header}}">{{type.text_alignment_header}}</a></dd>
						</dl>
					</div>
				<!-- SIDENAV - ENDS -->

				</div>
			</section>
			
		</section>
	<!-- TAB PANEL 4 - BEGINS -->
	</div>
<!-- TABS - ENDS -->