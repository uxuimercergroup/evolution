---
title: "Product Suites"
---

<!-- HERO - BEGINS -->
	<section class="row expanded evo-site-hero" data-evo-site-hero-size="large" data-evo-site-hero-arrow-position="bottom">
		<div class="small-12 columns evo-vertical-middle hide" data-anijs="if: load, on: window, do: $removeClass hide;">
			<div class="text-center evo-vertical-middle-element">
				<h1 class="evo-site-hero--hdr evo-no-margin-bottom" data-evo-site-hero-hdr-size="large">{{{product-suites.hero.title}}} <span>{{{product-suites.hero.subtitle}}}</span></h1>
			</div>		
		</div>
	</section>
<!-- HERO - ENDS -->

<!-- DIGITAL PRINCIPALS BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--marketing">
		<div class="medium-12 large-10 large-centered columns evo-site-band--marketing-content">
			<h3 class="text-center evo-margin-left evo-margin-right">{{{product-suites.principles.header}}}</h3>

			<div class="row small-up-{{what.users.grid_small}} medium-up-{{product-suites.principles.grid_medium}} large-up-{{product-suites.principles.grid_large}} evo-site-band--marketing-block-grid">
				{{#each product-suites.principles.items}}
				<div class="columns text-center">
					{{> (lookup . 'partial') }}
					<h5>{{{header}}}</h5>
					<p>{{{text}}}</p>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
<!-- DIGITAL PRINCIPALS BAND - ENDS -->

<!-- PRODUCT SUITES DIGITAL IDENTITY TAB BAND - BEGINS -->
	<section class="row expanded evo-site-band--marketing evo-site-band--tab evo-site-band--product-suites-visual-identity">
		<div class="evo-site-band--tab-hdr">
			<div class="small-12 columns">
				<div class="row">
					<div class="small-10 medium-9 large-7 small-centered columns evo-site-band--tab-hdr-tab">
						<h3 class="text-center">{{{product-suites.visual_identity.header}}}</h3>
					</div>
				</div>
				<div class="row">
					<div class="small-10 medium-9 large-7 small-centered columns evo-site-band--tab-hdr-tab-shim"></div>
				</div>
			</div>
		</div>
		<div class="evo-site-band--tab-panel">
			<div class="small-12 columns evo-site-band--marketing-content">

			<!-- VISUAL IDENTITY CAROUSEL - BEGINS -->
				<div class="orbit evo-orbit evo-orbit--product-suites" role="region" aria-label="Carousel" data-orbit>
					<ul class="orbit-container">
						<button class="orbit-previous" aria-label="Previous Slide" tabindex="0">
							<span class="show-for-sr">Previous Slide</span>
							<span aria-hidden="true"><i class="evo-icon-arrow-left2" title="Previous"></i></span>
						</button>
						<button class="orbit-next" aria-label="Next Slide" tabindex="0">
							<span class="show-for-sr">Next Slide</span>
							<span aria-hidden="true"><i class="evo-icon-arrow-right2" title="Next"></i></span>
						</button>
						{{#each product-suites.visual_identity.items}}
						<div class="text-center orbit-slide">
							<img class="float-center evo-spacer-margin-bottom-xx-large" src="/assets/images/evo-site-product-suites-{{add @index 1}}.png" width="800" alt="{{{product-suites.visual_identity.items.title}}}">
							<p class="evo-spacer-margin-bottom-xxx-large evo-site-band--product-suites-visual-identity-marketing-text">{{{text}}}</p>
						</div>
						{{/each}}
					</ul>
					<nav class="orbit-bullets">
						{{#each product-suites.visual_identity.items}}
						<button {{#is active 'true'}}class="is-active"{{/is}} data-slide="{{@index}}" aria-label="Slide {{add @index 1}}" tabindex="0">
							<span class="show-for-sr">Slide {{add @index 1}}</span>
							{{#is active 'true'}}<span class="show-for-sr">Current Slide</span>{{/is}}
						</button>
						{{/each}}
					</nav>
				</div>
			<!-- VISUAL IDENTITY CAROUSEL - ENDS -->

			</div>
		</div>
	</section>
<!-- PRODUCT SUITES DIGITAL IDENTITY TAB BAND - ENDS -->

<!-- STYLE TILES BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--marketing evo-site-band--product-suites-style-tiles">
		<div class="medium-10 large-10 medium-centered columns evo-site-band--marketing-content">
			<h3 class="text-center evo-margin-left evo-margin-right">{{{product-suites.style_tiles.header}}}</h3>

			<div class="row" data-equalizer="site-band">
				<div class="medium-6 medium-push-6 columns evo-spacer-padding-bottom-large" data-equalizer-watch="site-band">
					<div class="evo-vertical-middle">
						<div class="small-text-center medium-text-right evo-vertical-middle-element">
							<img class="evo-site-hidden" src="{{assets}}/images/evo-site-product-suites-style-tiles.png" alt="{{{product-suites.style_tiles.header}}}" data-anijs="if: scroll, on: window, do: fadeInUpBig animated evo-site-visible, before: scrollReveal, after: holdAnimClass">
						</div>
					</div>
				</div>
				<div class="medium-6 medium-pull-6 columns" data-equalizer-watch="site-band">
					<div class="evo-vertical-middle">
						<div class="evo-vertical-middle-element">
							{{#each product-suites.style_tiles.items}}
							<p class="evo-keyline-left evo-spacer-margin-bottom-xx-large evo-site-pull-out">{{{text}}}</p>
							{{/each}}
						</div>
					</div>
				</div>
			</div>
			
		</div>
	</section>
<!-- STYLE TILES BAND - ENDS -->