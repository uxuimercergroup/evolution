<section class="evo-full-width evo-site-hero" data-evo-site-hero-size="4x-large" data-evo-site-hero-arrow-position="bottom">
	<div class="small-12 columns evo-center-block-vertical hide" data-anijs="if: load, on: window, do: $removeClass hide;">
		<div class="text-center evo-center-block-vertical-element">
			<h1 class="evo-site-hero--hdr flipInY animated">{{get-started.hero.title}} <span>{{get-started.hero.subtitle}}</span></h1>
			<h3 class="evo-center-block evo-site-hero--tagline bounceInUp animated">{{get-started.hero.tagline}}</h3>
		</div>		
	</div>
</section>

<section class="evo-full-width evo-site-band evo-site-band--marketing">
	<div class="medium-12 large-10 large-centered columns evo-site-band--marketing-content">
		<h3 class="text-center">{{get-started.users.header}}</h3>
		<ul class="small-block-grid-{{get-started.users.grid_small}} medium-block-grid-{{get-started.users.grid_medium}} large-block-grid-{{get-started.users.grid_large}} evo-site-band--marketing-block-grid">
			{{#each get-started.users.items}}
			<li class="text-center">
				{{> (lookup . 'partial') }}
				<h5>{{header}}</h5>
				<p>{{text}}</p>
			</li>
			{{/each}}
		</ul>
	</div>
</section>

<section class="evo-full-width evo-site-band evo-site-band--marketing">
	<div class="evo-contain-to-grid">
		<h3 class="text-center">{{get-started.process.header}}</h3>
	</div>
</section>