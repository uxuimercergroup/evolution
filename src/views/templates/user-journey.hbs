---
title: "User Journeys"
---
<!-- USER JOURNEYS HERO - BEGINS -->
	<section class="row expanded evo-site-hero" data-evo-site-hero-size="x-large" data-evo-site-hero-arrow-position="bottom">
		<div class="small-12 columns evo-vertical-middle hide" data-anijs="if: load, on: window, do: $removeClass hide;">
			<div class="text-center evo-vertical-middle-element">
				<h1 class="evo-site-hero--hdr flipInY animated" data-evo-site-hero-hdr-size="medium">{{{user-journey.hero.title}}} <span>{{{user-journey.hero.subtitle}}}</span></h1>
				<h3 class="float-center evo-site-hero--tagline bounceInUp animated">{{{ user-journey.hero.tagline }}}</h3>
			</div>		
		</div>
	</section>
<!-- USER JOURNEYS HERO - ENDS -->

<!-- CONTENT BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--marketing">
		<div class="medium-12 large-10 large-centered columns evo-site-band--marketing-content">
			<h3 class="text-center evo-margin-left evo-margin-right">{{{user-journey.content_band1.header}}}</h3>

			<div class="row small-up-{{user-journey.content_band1.grid_small}} medium-up-{{user-journey.content_band1.grid_medium}} large-up-{{user-journey.content_band1.grid_large}} evo-site-band--marketing-block-grid">
				{{#each user-journey.content_band1.items}}
				<div class="columns text-center">
					{{> (lookup . 'partial') }}
					<h5>{{{header}}}</h5>
					<p>{{{text}}}</p>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
<!-- CONTENT BAND - ENDS -->

<!-- CONTENT BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--dark evo-site-band--marketing" data-evo-site-band-theme="learn">
