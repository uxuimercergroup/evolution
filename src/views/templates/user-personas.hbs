---
title: "User Personas"
---
<!-- USER PERSONAS HERO - BEGINS -->
	<section class="row expanded evo-site-hero" data-evo-site-hero-size="x-large" data-evo-site-hero-arrow-position="bottom">
		<div class="small-12 columns evo-vertical-middle hide" data-anijs="if: load, on: window, do: $removeClass hide;">
			<div class="text-center evo-vertical-middle-element">
				<h1 class="evo-site-hero--hdr flipInY animated" data-evo-site-hero-hdr-size="medium">{{{user-personas.hero.title}}} <span>{{{user-personas.hero.subtitle}}}</span></h1>
				<h3 class="float-center evo-site-hero--tagline bounceInUp animated">{{{ user-personas.hero.tagline }}}</h3>
			</div>		
		</div>
	</section>
<!-- USER PERSONAS HERO - ENDS -->

<!-- CONTENT BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--marketing">
		<div class="medium-12 large-10 large-centered columns evo-site-band--marketing-content">
			<div class="row">
				<div class="medium-12 columns text-center">
					<img class="show-for-medium evo-site-hidden" src="{{assets}}/images/evo-site-what-inside-out.png" alt="{{{user-personas.info_graphic_band.header}}}" data-anijs="if: scroll, on: window, do: fadeInUpBig animated evo-site-visible, before: scrollReveal, after: holdAnimClass">
				</div>
			</div>
			<div class="row">
				<div class="small-12 medium-10 large-8 medium-centered columns">
					<h5 class="text-center evo-margin-left evo-margin-right evo-spacer-margin-bottom-xxx-large">{{{user-personas.info_graphic_band.header}}}</h5>
					<p>{{{user-personas.info_graphic_band.text}}}</p>
				</div>
			</div>
		</div>
	</section>
<!-- CONTENT BAND - ENDS -->

<!-- CONTENT BAND - BEGINS -->
	<section class="row expanded evo-site-band evo-site-band--dark evo-site-band--marketing" data-evo-site-band-theme="learn">
		<div class="medium-12 large-10 large-centered columns evo-site-band--marketing-content">
			<h5 class="text-center evo-margin-left evo-margin-right evo-spacer-margin-bottom-xxx-large">{{{user-personas.key_objectives_band.header}}}</h5>
			<div class="row">
				<div class="medium-12 large-8 medium-centered columns">
					<div class="row medium-up-2">
						<div class="columns">
							<ul>
								{{#slice user-personas.key_objectives_band.items offset="0" limit="2"}}
									<li class="evo-margin-bottom">{{text}}</li>
								{{/slice}}
							</ul>
						</div>
						<div class="columns">
							<ul>
								{{#slice user-personas.key_objectives_band.items offset="2" limit="2"}}
									<li class="evo-margin-bottom">{{text}}</li>
								{{/slice}}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
<!-- CONTENT BAND - ENDS -->

<!-- TAB BAND - BEGINS -->
	<section class="row expanded evo-site-band--marketing evo-site-band--tab">
		<div class="evo-site-band--tab-hdr" data-evo-site-band-theme="learn">
			<div class="small-12 columns">
				<div class="row">
					<div class="small-10 medium-7 large-5 small-centered columns evo-site-band--tab-hdr-tab">
						<h3 class="text-center">{{{user-personas.persona_db_tab_band.header}}}</h3>
					</div>
				</div>
				<div class="row">
					<div class="small-10 medium-7 large-5 small-centered columns evo-site-band--tab-hdr-tab-shim"></div>
				</div>
			</div>
		</div>
		<div class="evo-site-band--tab-panel">
			<div class="row">
				<div class="medium-12 large-10 large-centered columns">
					
				{{#each user-personas.persona_db_tab_band.items}}
					<div class="row evo-site-band--library-info">
						<div class="medium-7 columns">
							<h5>{{{header}}}</h5>
							<p>{{{description}}}</p>
							<a href="{{link-url}}" class="button hollow evo-button" role="button"><span class="evo-button-text">{{link-name}}</span><i class="evo-icon-arrow-right2 evo-icon-position-right"></i></a>
						</div>
						<div class="medium-4 medium-offset-1 columns">
							<img src="{{document-image}}" width="800">
						</div>
					</div>
				{{/each}}

				</div>
			</div>
		</div>
	</section>
<!-- TAB BAND - ENDS -->