{{!--
text: your content
type: alert, warning, success, custom
custom-icon-class: icon class of custom icomoon icon when custom type is used
custom-class: your custom class
--}}
<!-- {{uppercase type}} BOX - BEGINS -->
<div class="callout evo-callout evo-alert-box{{#is type 'warning'}} warning{{/is}}{{#is type 'success'}} success{{/is}}{{#is type 'alert'}} alert{{/is}}{{#if custom-class}} {{ custom-class }}{{/if}}" data-closable aria-live="assertive" role="alertdialog">
	<i class="{{#is type 'warning'}}evo-icon-warning2 {{/is}}{{#is type 'success'}}evo-icon-checkmark-circle {{/is}}{{#is type 'alert'}}evo-icon-notification2 {{/is}}{{#is type 'custom'}}{{ custom-icon-class }} {{/is}}evo-icon-position-left"></i>{{#if text}}{{{text}}}{{else}}Message text would go here&hellip;{{/if}}
	<button class="close-button" aria-label="Close" type="button" tabindex="0" data-close>
		<span class="show-for-sr">Close</span>
		<span aria-hidden="true"><i class="evo-icon-cancel-circle"></i></span>
	</button>
</div>
<!-- {{uppercase type}} BOX - ENDS -->