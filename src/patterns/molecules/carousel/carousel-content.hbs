<!-- CAROUSEL - BEGINS -->
<div class="evo-carousel" data-evo-carousel="evo-carousel-example">
{{#repeat count=5 start=1}}
	<div class="evo-carousel-item">

		<!-- BOX - BEGINS -->
		<div class="callout evo-callout evo-no-margin-bottom">
			<section>
				<h1 class="evo-no-margin-top">Carousel Item {{@index}}</h1>
				{{> type-header size="3" class="subheader evo-spacer-margin-bottom-x-larg" text="Subheader"}}
				{{> button button-type="button" custom-class="evo-no-margin-bottom" text="Primary"}}
			</section>
		</div>
		<!-- BOX - ENDS -->

	</div>
{{/repeat}}
</div>
<!-- CAROUSEL - ENDS -->